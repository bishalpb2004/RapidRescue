<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.home.HomeFragment">



    <ScrollView
        android:fillViewport="true"
        android:id="@+id/r0s7zfjcnane9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#333333"
        android:paddingTop="22dp"
        android:paddingBottom="85dp"
        android:paddingHorizontal="10dp">


        <com.google.android.material.card.MaterialCardView
            android:backgroundTint="#696969"
            app:shapeAppearanceOverlay="@style/roundimageview"
            android:orientation="horizontal"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="120sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.google.android.material.card.MaterialCardView
                android:layout_margin="10dp"
                android:backgroundTint="@color/black"
                app:shapeAppearanceOverlay="@style/roundimageview"
                android:orientation="horizontal"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="120sp">



                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/linear_layout1"
                    android:layout_width="300dp"
                    android:layout_height="120sp"
                    android:background="@color/black"
                    android:paddingVertical="29dp"
                    android:paddingHorizontal="26dp"
                    android:layout_marginBottom="75dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/emergencyDel"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Welcome"
                        android:textStyle="bold|italic"
                        />

                    <TextView
                        android:id="@+id/textview_name"
                        android:textColor="#00E6C5"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="(Loading Profile...)"
                        />


                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_margin="10dp"
                android:backgroundTint="@color/black"
                app:shapeAppearanceOverlay="@style/roundimageview"
                android:orientation="horizontal"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="120sp">
            <LinearLayout
                android:backgroundTint="@color/black"
                android:id="@+id/linear_layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:paddingVertical="25dp"
                android:paddingHorizontal="60dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rri7rtfgtszn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="9dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/r4ogol5l4mi"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="11dp"
                        android:src="@drawable/img_2"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/add_em_num"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Add"
                        android:textStyle="bold"
                        />

                </LinearLayout>
                <TextView
                    android:id="@+id/emergency"
                    android:textColor="#00E6C5"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="emergency"
                    />
            </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_margin="10dp"
                android:backgroundTint="@color/black"
                app:shapeAppearanceOverlay="@style/roundimageview"
                android:orientation="horizontal"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="120sp">
            <LinearLayout
                android:backgroundTint="@color/black"
                android:id="@+id/linear_layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:paddingVertical="27dp"
                android:paddingHorizontal="61dp"
                android:layout_marginBottom="11dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rnms68ai5ysa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="11dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/rg717hcypvsv_rl"
                        android:layout_width="21dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        >
                        <ImageView
                            android:id="@+id/rg717hcypvsv"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:src="@drawable/img_4"
                            android:scaleType="fitXY"
                            />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/view_em_num"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="View"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/instructions"
                    android:textColor="#00E6C5"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Emergency Numbers"
                    />
            </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_margin="10dp"
                android:backgroundTint="@color/black"
                app:shapeAppearanceOverlay="@style/roundimageview"
                android:orientation="horizontal"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="120sp"
                >
            <LinearLayout
                android:backgroundTint="@color/black"
                android:id="@+id/knowInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:paddingVertical="27dp"
                android:paddingHorizontal="62dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rnog4xmm7tym"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/rcyrf28ctp0r"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="14dp"
                        android:src="@drawable/img_5"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/rsrfxi6zxa2"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Know the"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/rg2ul3j9ltyp"
                    android:textColor="#00E6C5"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Instructions"
                    />
            </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>