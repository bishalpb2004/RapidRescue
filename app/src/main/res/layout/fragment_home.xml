<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#333333"
        android:paddingTop="20dp"
        android:paddingBottom="60dp"
        android:paddingHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/welcomeCard"
                android:layout_margin="10dp"
                android:backgroundTint="@color/black"
                app:shapeAppearanceOverlay="@style/roundimageview"
                android:orientation="horizontal"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="120sp">

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/linear_layout1"
                    android:layout_width="300dp"
                    android:layout_height="120sp"
                    android:background="@color/black"
                    android:paddingVertical="29dp"
                    android:paddingHorizontal="26dp"
                    android:layout_marginBottom="75dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/emergencyDel"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Welcome"
                        android:textStyle="bold|italic"/>

                    <TextView
                        android:id="@+id/textview_name"
                        android:textColor="#00E6C5"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=""/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="3"
                android:columnCount="2"
                android:layout_gravity="center_horizontal"
                android:columnOrderPreserved="false"
                android:padding="10dp">

                <!-- Uniform CardView template -->

                <!-- View Emergency -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/viewEmergencyCard"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:backgroundTint="#000000"
                    app:shapeAppearanceOverlay="@style/roundimageview">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/rg717hcypvsv"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/emergency_call"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/view_em_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Add/View Emergency"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Panic Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/panicButtonCard"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:backgroundTint="#000000"
                    app:shapeAppearanceOverlay="@style/roundimageview">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/panicButtonIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/panic_switch"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/panicButtonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Panic Button"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Instructions -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/instructionsCard"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:backgroundTint="#000000"
                    app:shapeAppearanceOverlay="@style/roundimageview">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/rcyrf28ctp0r"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/instructions"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/rsrfxi6zxa2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Instructions"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Add Emergency -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/weathercard"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:backgroundTint="#000000"
                    app:shapeAppearanceOverlay="@style/roundimageview">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/r4ogol5l4mi"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/weather_safety"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/add_em_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Weather Forecast"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Coming Soon 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/comingSoonCard1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:backgroundTint="#000000"
                    app:shapeAppearanceOverlay="@style/roundimageview">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/rcyrf28ctp0r1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/mystery"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/rsrfxi6zxa21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="coming soon"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Coming Soon 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/comingSoonCard2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:backgroundTint="#000000"
                    app:shapeAppearanceOverlay="@style/roundimageview">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/safetyInstructionsIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/mystery"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/safetyInstructionsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="coming soon"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"/>
    </FrameLayout>
</RelativeLayout>
