<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.home.HomeFragment">



    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#333333"
        android:paddingTop="20dp"
        android:paddingBottom="60dp"
        android:paddingHorizontal="10dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.google.android.material.card.MaterialCardView
                android:layout_margin="10dp"
                android:backgroundTint="@color/black"
                app:shapeAppearanceOverlay="@style/roundimageview"
                android:orientation="horizontal"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="120sp">



                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/linear_layout1"
                    android:layout_width="300dp"
                    android:layout_height="120sp"
                    android:background="@color/black"
                    android:paddingVertical="29dp"
                    android:paddingHorizontal="26dp"
                    android:layout_marginBottom="75dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/emergencyDel"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Welcome"
                        android:textStyle="bold|italic"
                        />

                    <TextView
                        android:id="@+id/textview_name"
                        android:textColor="#00E6C5"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=""
                        />


                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="3"
                android:columnCount="2"
                android:layout_gravity="center_horizontal"
                android:columnOrderPreserved="false"
                android:padding="3dp">

                <com.google.android.material.card.MaterialCardView
                    android:backgroundTint="@color/black"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    android:orientation="horizontal"
                    android:background="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="130sp"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp">
                    <LinearLayout
                        android:backgroundTint="@color/black"
                        android:id="@+id/linear_layout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:paddingVertical="20dp"
                        android:paddingHorizontal="50dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/rri7rtfgtszn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/r4ogol5l4mi"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/img_2"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:id="@+id/add_em_num"
                                android:textColor="#FFFFFF"
                                android:textSize="11sp"
                                android:layout_height="wrap_content"
                                android:layout_width="60sp"
                                android:layout_weight="1"
                                android:text="Add Emergency"
                                android:textStyle="bold"
                                android:textAlignment="center"/>
                            <TextView
                                android:layout_width="60sp"
                                android:layout_height="17sp"
                                android:text=""
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:backgroundTint="@color/black"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="130sp">
                    <LinearLayout
                        android:backgroundTint="@color/black"
                        android:id="@+id/linear_layout5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:paddingVertical="27dp"
                        android:paddingHorizontal="50dp"
                        android:layout_marginBottom="11dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/rnms68ai5ysa"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="11dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/rg717hcypvsv"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/img_4"
                                android:scaleType="fitXY"
                                android:layout_gravity="center"/>
                            <TextView
                                android:id="@+id/view_em_num"
                                android:textColor="#FFFFFF"
                                android:textSize="10sp"
                                android:layout_height="match_parent"
                                android:layout_width="60sp"
                                android:layout_weight="1"
                                android:text="View Emergency"
                                android:textStyle="bold"
                                android:textAlignment="center"/>

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:backgroundTint="@color/black"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    android:orientation="horizontal"
                    android:background="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="120sp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="right|center">
                    <LinearLayout
                        android:backgroundTint="@color/black"
                        android:id="@+id/knowInstructions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:paddingVertical="20dp"
                        android:paddingHorizontal="50dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/rnog4xmm7tym"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/rcyrf28ctp0r"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/img_5"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:id="@+id/rsrfxi6zxa2"
                                android:textColor="#FFFFFF"
                                android:textSize="11sp"
                                android:layout_height="wrap_content"
                                android:layout_width="60dp"
                                android:layout_weight="1"
                                android:text="Instructions"
                                android:textStyle="bold"
                                android:textAlignment="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/black"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    android:orientation="horizontal"
                    android:background="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="120sp">
                    <LinearLayout
                        android:backgroundTint="@color/black"
                        android:id="@+id/knowInstructions1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:paddingVertical="20dp"
                        android:paddingHorizontal="50dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/rnog4xmm7tym1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/rcyrf28ctp0r1"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/waves"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:id="@+id/rsrfxi6zxa21"
                                android:textColor="#FFFFFF"
                                android:textSize="11sp"
                                android:layout_height="wrap_content"
                                android:layout_width="60dp"
                                android:layout_weight="1"
                                android:text="coming soon"
                                android:textStyle="bold"
                                android:textAlignment="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:backgroundTint="@color/black"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    android:orientation="horizontal"
                    android:background="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="120sp"
                    android:layout_gravity="right|center|top"
                    android:layout_marginRight="15dp">
                    <LinearLayout
                        android:backgroundTint="@color/black"
                        android:id="@+id/panicButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:paddingVertical="20dp"
                        android:paddingHorizontal="50dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/panicButtonLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/panicButtonIcon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/road_safety"
                                android:background="@color/black"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:id="@+id/panicButtonText"
                                android:textColor="#FFFFFF"
                                android:textSize="11sp"
                                android:layout_height="wrap_content"
                                android:layout_width="60dp"
                                android:layout_weight="1"
                                android:text="Panic Button"
                                android:textStyle="bold"
                                android:textAlignment="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:backgroundTint="@color/black"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    android:orientation="horizontal"
                    android:background="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="120sp"
                    android:layout_gravity="right|center|top"
                    android:layout_marginRight="10dp">
                    <LinearLayout
                        android:backgroundTint="@color/black"
                        android:id="@+id/safetyInstructions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:paddingVertical="20dp"
                        android:paddingHorizontal="50dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/safetyInstructionsLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/safetyInstructionsIcon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/waves"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:id="@+id/safetyInstructionsText"
                                android:textColor="#FFFFFF"
                                android:textSize="11sp"
                                android:layout_height="wrap_content"
                                android:layout_width="60dp"
                                android:layout_weight="1"
                                android:text="coming soon"
                                android:textStyle="bold"
                                android:textAlignment="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>




        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"/>

    </FrameLayout>


</RelativeLayout>